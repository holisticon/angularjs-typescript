{
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"]
  },
  "lib": [
    "dom",
    "es6"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  },
  "filesGlob": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "out",
    "node_modules",
    "node_modules/@types/angular-mocks",
    "dist",
    "dev",
    "typings/main.d.ts",
    "typings/main",
    "reports"
  ]
}